page {
    background-color: rgba(242, 242, 247, 1);
    overflow: auto;
}

#userInfo {
    margin-top: 10rpx;
    padding: 0 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 150rpx;
    border: 1px solid rgb(198, 198, 200);
    background-color: white;
}

.headImg {
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
}

.editImg {
    height: 140rpx;
    width: 140rpx;
    border-radius: 50%;
    position: relative;
}

.editImg::after {
    content: "编辑";
    text-align: center;
    font-size: 20rpx;
    color: rgba(158, 158, 158, 1);
    display: block;
    height: 20%;
    position: absolute;
    background-color: rgb(3, 3, 4);
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1;
}

.infoBox {
    margin-top: 70rpx;
    padding-left: 40rpx;
    border: 1px solid rgb(198, 198, 200);
    background-color: white;
}

.info-item {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 80rpx;
}

.info-item-image {
    width: 65rpx;
    height: 65rpx;
    object-fit: cover;
}

.info-item-text {
    font-size: 35rpx;
    border-bottom: 1px solid rgb(198, 198, 200);
    flex: 1;
    height: 100%;
    margin-left: 20rpx;
    display: flex;
    align-items: center;
}

.logout {
    margin-top: 70rpx;
    border: 1px solid rgb(198, 198, 200);
    background-color: white;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 35rpx;
    color: rgb(234, 68, 90);
}

.half-button {
    color: rgb(234, 68, 90);
}

.half-screen-dialog {
    padding: 0;
}