
page{
    background-image: linear-gradient(180deg, #A9C9FF 0%, #FFBBEC 100%);
    padding-top: 70%;
}

.back-img-bottom{
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: -1;
}

.back-img-top{
    position: fixed;
    width: 300rpx;
    height: 300rpx;
    top: 5%;
    left: 10%;
    z-index: -1;
    animation: rotate linear 30s infinite;
}

.back-img-centern{
    position: fixed;
    top: 30%;
    left: 30%;
    z-index: -1;
}

@keyframes rotate{
    0%{
        transform: rotateZ(0deg);
    }
    50%{
        transform: rotateZ(180deg);
    }
    100%{
        transform: rotateZ(360deg);
    }
}

.show-box{
    transition: all ease 0.3s;
    overflow: hidden;
}

.title{
    text-align: center;
    font-size: 40rpx;
    font-weight: 600;
    color: white;
    display: flex;
    height: 60rpx;
    justify-content: space-evenly;
}

.inputText{
    height: 100rpx;
    background-color: rgb(240, 247, 255);
    border: 1px solid #A9C9FF;
    border-radius: 50rpx;
    width: 80%;
    margin: 20rpx auto;
    padding-left: 40rpx;
    position: relative;
    color: rgb(155, 155, 155);
    font-size: 35rpx;
    box-sizing: border-box;
}

.input-place{
    font-size: 35rpx;
}

.btn{
    width: 80% !important;
    height: 100rpx;
    background-image: linear-gradient(to right,rgb(113,185,243),rgb(64,110,245));
    border-radius: 50rpx;
    margin: 60rpx auto;
    text-align: center;
    color: white;
    font-size: 35rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
}