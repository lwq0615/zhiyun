<!-- 音乐列表 -->
<scroll-view 
    scroll-y="true"
    bindscrolltolower="scrolltolower"
    style="max-height: {{height ? height+'rpx' : ''}};"
    lower-threshold="10"
>
    <view 
        wx:for="{{musics}}" 
        wx:key="id" 
        bindtap="musicTap" 
        bindtouchend="musicTouched"
        bindlongtap="musicLongTap"
        data-music="{{item}}" 
        class="music"
        hover-class="musicHover"
    >
        <image 
            src="{{URL+'/getPicByUrl?comp=true&url='+item.coverPath}}"
            style="height: 3em;width: 3em;float: left;background-color: whitesmoke;border-radius: 2px;margin-top: 0.3em;"
            lazy-load="true"
        ></image>
        <view style="margin-left: 4em;height: 3.5em;border-bottom: 1px solid #DDDDDD;">
            <view style="float: right;line-height: 3.5em;" hidden="{{!item.checked}}">
                <icon 
                    color="#EA445A" 
                    type="field"
                    icon="done2" 
                    size="{{0.07*clientWidth}}" 
                ></icon>
            </view>
            <view style="height: 1.7em;line-height: 1.7em;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{item.name}}</view>
            <view style="height: 1.7em;line-height: 1.7em;font-size: 0.9em;opacity: 0.5;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">{{item.artist}}</view>
        </view>
    </view>
    <view style="opacity: 0.6;text-align: center;margin-top: 1em;">{{count}}首歌曲</view>
</scroll-view>